# Database
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=eplatform_user
DB_PASSWORD=eplatform_password
DB_DATABASE=eplatform

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=900

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# SMTP
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@eplatform.com

# Frontend
FRONTEND_URL=http://localhost:5173

# App
PORT=3000
NODE_ENV=development

# Token Expiration (in hours)
PASSWORD_RESET_TOKEN_EXPIRATION=24
EMAIL_VERIFICATION_TOKEN_EXPIRATION=24

# Throttling
THROTTLE_TTL=60
THROTTLE_LIMIT=5